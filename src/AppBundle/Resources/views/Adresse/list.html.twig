{% extends "base.html.twig" %}

{% block title %}Emploi:List{% endblock %}
        {% block header %}
            <h1>Gestion des Adresses</h1>
            <ol class="breadcrumb">
                <li><a href="index.html"><i class="fa fa-dashboard"></i> Dashboard</a></li>
                <li class="active"><i class="fa fa-file"></i> Blank Page</li>
                <li class="active"><i class="fa fa-file"></i> Gestion des Adresses</li>
            </ol>
        {% endblock %}

{% block body %}
{{ dump(addresses ) }}
    <div class="container" >
        <div class="row">
            <table class="table table-hover">
                <thead>

                <tr>
                    <th>Id</th>
                    <th>State</th>

                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for address in addresses%}
                    <tr>

                        <td>{{ address.id }} </td>
                        <td>{{ address.description }}</td>

                        <td>
                            <button class="btn btn-danger" >

                            <a class="fa fa-share" href="{{ path('RemoveAddresse',{addresse:address.id})}}"> Remove
                                </a>
                            </button>

                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
